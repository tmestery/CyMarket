<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#F5FAFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="36dp"
        android:layout_marginTop="175dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:text="LOGIN"
            android:textSize="44sp"
            android:textColor="#223344"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:layout_marginBottom="48dp"
            android:letterSpacing="0.08"
            android:shadowColor="#33000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <RadioGroup
            android:id="@+id/login_role_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/role_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:checked="true" />

            <RadioButton
                android:id="@+id/role_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:layout_marginStart="16dp" />
        </RadioGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundColor="#FFFFFF"
            android:elevation="6dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_email_edt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Email (@iastate.edu)"
                android:inputType="textEmailAddress"
                android:textColor="#223344"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:importantForAutofill="yes" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            android:elevation="6dp"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_password_edt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColor="#223344"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:importantForAutofill="yes" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forgot_password"
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3B82F6"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="@font/inter"
            android:layout_gravity="end"
            android:layout_marginBottom="44dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="6dp" />

        <Button
            android:id="@+id/login_login_btn"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="Login"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:backgroundTint="#3B82F6"
            android:elevation="6dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clipToOutline="true"
            app:cornerRadius="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:text="Don't have an account? "
                android:textColor="#223344"
                android:textSize="14sp"
                android:fontFamily="@font/inter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/login_signup_txt"
                android:text="Sign up"
                android:textColor="#3B82F6"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/admin_hidden_entry"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:alpha="0.01"
            android:text=""
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</ScrollView>