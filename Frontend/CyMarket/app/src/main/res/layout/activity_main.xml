<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Top AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="6dp"
        android:title="Marketplace"
        android:titleTextColor="@color/black"
        app:navigationIcon="@drawable/profile_art"
        app:menu="@menu/top_appbar_menu"
        app:titleCentered="true" />

    <!-- Scrollable categories -->
    <ScrollView
        android:id="@+id/categories_scroll"
        android:layout_below="@id/top_appbar"
        android:layout_above="@id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Category cards with white background & black outline -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_textbooks"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                android:backgroundTint="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Textbooks"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_furniture"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                android:backgroundTint="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Furniture"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_appliances"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                android:backgroundTint="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Appliances"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_clothing"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                android:backgroundTint="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Clothing"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/category_misc"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                android:backgroundTint="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Miscellaneous"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemRippleColor="@color/buttons_2_color"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="12dp" />

</RelativeLayout>


