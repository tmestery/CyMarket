<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#F5FAFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="36dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:text="SIGN UP"
            android:textSize="44sp"
            android:textColor="#223344"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:layout_marginBottom="48dp"
            android:letterSpacing="0.08"
            android:shadowColor="#33000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <!-- First and Last Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxBackgroundColor="#FFFFFF"
                android:elevation="6dp"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_first_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="First Name"
                    android:textColor="#223344"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxBackgroundColor="#FFFFFF"
                android:elevation="6dp"
                android:layout_marginStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_last_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Last Name"
                    android:textColor="#223344"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundColor="#FFFFFF"
            android:elevation="6dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_email_edt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Email (@iastate.edu)"
                android:inputType="textEmailAddress"
                android:textColor="#223344"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Username -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundColor="#FFFFFF"
            android:elevation="6dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_username_edt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Username"
                android:textColor="#223344"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundColor="#FFFFFF"
            android:elevation="6dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_password_edt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColor="#223344"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxBackgroundColor="#FFFFFF"
            android:elevation="6dp"
            android:layout_marginBottom="32dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signup_confirm_edt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="#223344"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signup_signup_btn"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="Create Account"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:backgroundTint="#3B82F6"
            android:elevation="6dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clipToOutline="true"
            app:cornerRadius="16dp" />

        <!-- Login Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <TextView
                android:text="Already have an account? "
                android:textColor="#223344"
                android:textSize="14sp"
                android:fontFamily="@font/inter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/signup_login_text"
                android:text="Log in"
                android:textColor="#3B82F6"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>