<androidx.appcompat.widget.LinearLayoutCompat xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="45sp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"
        android:gravity="center"/>

    <!-- First and Last Name Part -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/signup_first_name_edt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="First Name"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:background="@drawable/edittext_box"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/signup_last_name_edt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Last Name"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:background="@drawable/edittext_box"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- ISU Email Part -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="8dp">

        <EditText
            android:id="@+id/signup_email_edt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_box"
            android:fontFamily="@font/inter"
            android:gravity="center_vertical|start"
            android:hint="Enter Email (@iastate.edu)"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- Username Part -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="8dp">

        <EditText
            android:id="@+id/signup_username_edt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Username"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:background="@drawable/edittext_box"/>
    </LinearLayout>

    <!-- Password Part -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="8dp">

        <EditText
            android:id="@+id/signup_password_edt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:background="@drawable/edittext_box"/>
    </LinearLayout>

    <!-- Confirm Password Part -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:paddingHorizontal="8dp">

        <EditText
            android:id="@+id/signup_confirm_edt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center_vertical|start"
            android:padding="12dp"
            android:background="@drawable/edittext_box"/>
    </LinearLayout>

    <!-- Buttons Part -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/signup_signup_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="18sp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/inter"
            android:textColor="@color/white"
            app:cornerRadius="0dp"/>

        <TextView
            android:id="@+id/signup_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Log in"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>