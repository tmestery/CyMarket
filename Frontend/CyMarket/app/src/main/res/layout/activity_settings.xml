<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top AppBar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/settings_top_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="6dp"
        android:title="Settings"
        android:titleTextColor="@color/black"
        app:navigationIcon="@drawable/profile_art"
        app:titleCentered="true" />

    <!-- Scrollable Main Content -->
    <ScrollView
        android:id="@+id/settings_scroll"
        android:layout_below="@id/settings_top_appbar"
        android:layout_above="@id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Main Content Block for Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="8dp"
                android:padding="24dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="32dp"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="General Account Settings"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="25dp"
                    android:textColor="@color/black" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/black" />

                <!-- Username -->
                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username:                              example"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="#000000" />

                <!-- Email -->
                <TextView
                    android:id="@+id/email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:                    example@example.com"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="#000000" />

<!--                &lt;!&ndash; Name &ndash;&gt;-->
<!--                <TextView-->
<!--                    android:id="@+id/first_last_name_label"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Name:                                          First Last"-->
<!--                    android:fontFamily="sans-serif-condensed-medium"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_marginTop="12dp"-->
<!--                    android:layout_marginBottom="12dp"-->
<!--                    android:textSize="18dp"-->
<!--                    android:textColor="@color/black" />-->

<!--                <View-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"-->
<!--                    android:layout_marginBottom="5dp"-->
<!--                    android:background="#000000" />-->

                <!-- Password -->
                <TextView
                    android:id="@+id/password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password:                                    *********"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:background="#000000" />

                <!-- Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/remove_pfp_btn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="300dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Remove Profile Picture"
                    android:textSize="14sp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#000000"
                    android:elevation="6dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout_btn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="300dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:text="LOGOUT"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:backgroundTint="#000000"
                    android:elevation="6dp"
                    android:layout_marginBottom="15dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_btn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="300dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:text="DELETE ACCOUNT"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#000000"
                    android:elevation="6dp"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:itemRippleColor="@color/buttons_2_color"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="12dp" />
</RelativeLayout>
